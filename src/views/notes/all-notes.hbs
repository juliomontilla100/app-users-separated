<div class="container">

    {{#if successMessage}}
        <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
            {{successMessage}}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {{/if}}

    <div class="row mt-4">
        {{#each allNotes}}
            <div class="col-md-3">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        {{title}} <a href="notes/edit/{{id}}">Editar</a>
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{description}}</p>

                        <form method="POST" action="notes/delete/{{id}}?_method=DELETE">
                            <button class="btn btn-danger d-block mt-3 d-block w-100" type="submit">Borrar</button>
                        </form>

                    </div>
                </div>
            </div>

        {{else}}
            <div class="col-md-3 mx-auto">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        No Hay Notas
                    </div>
                    <div class="card-body">
                        <p class="card-text">Que esperas?</p>

                        <a href="notes/add" class="btn btn-primary d-block mt-3">Crea una Nota</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>